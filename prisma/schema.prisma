// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tech {
  id          String    @id @default(cuid())
  name        String
  description String
  icon        String?
  url         String
  Project     Project[]
  Feature     Feature[]
}

model Project {
  id          String        @id @default(cuid())
  title       String
  description String
  repo        String?
  url         String?
  imageUrl    String?
  startDate   DateTime
  endDate     DateTime?
  statusId    String
  Status      ProjectStatus @relation(fields: [statusId], references: [id])
  Tech        Tech[]
}

model ProjectStatus {
  id      String    @id @default(cuid())
  status  String
  Project Project[]
}

model Feature {
  id          String    @id @default(cuid())
  title       String
  description String?
  dateLearned DateTime?
  learned     Boolean
  techId      String
  Tech        Tech      @relation(fields: [techId], references: [id])
}
